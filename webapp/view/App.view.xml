<mvc:View
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="one_walkthrough.controller.App"
  displayBlock="true">
  <Shell>
    <App>
      <pages>
        <Page
          id="app_page"
          title="{i18n>homePageTitle}">
          <headerContent>
            <Button
              icon="sap-icon://hello-world"
              press="onOpenDialog"/>
          </headerContent>
          <content>
            <mvc:XMLView
              viewName="one_walkthrough.view.HelloPanel"/>
            <mvc:XMLView
              viewName="one_walkthrough.view.InvoiceList"/>
          </content>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>